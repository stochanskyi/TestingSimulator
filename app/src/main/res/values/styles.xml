<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="android:Widget.TextView">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Accent">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Error">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Larger">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.DialogTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.DialogTitle.Contrast">
        <item name="android:background">@color/color_app_grey</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.DialogAction">
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_app_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.NoDataMessage" parent="Text.Medium">
        <item name="android:layout_marginStart">42dp</item>
        <item name="android:layout_marginEnd">42dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="Text.Button" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_button</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/input_background</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>

    <style name="InputLayout.WithError">
        <item name="errorEnabled">true</item>
    </style>

    <style name="InputLayout.Expanded">
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="InputLayout.Password" parent="InputLayout.WithError">
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Input" parent="Text">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray_very_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Wide">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">64dp</item>
        <item name="android:paddingEnd">64dp</item>
    </style>

    <style name="Button.Big">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">64dp</item>
        <item name="android:paddingEnd">64dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Button.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Small.Selectable">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/button_color_selector</item>
    </style>

    <style name="Button.Contrast">
        <item name="android:backgroundTint">@color/color_app_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>